{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["metarhia", "plugin:sonarjs/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "BigInt": true
    },
    "plugins": ["sonarjs"],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js"]
            }
        }
    },
    "rules": {
        "sonarjs/cognitive-complexity": ["error", 15],
        "indent": ["error", 4],
        "max-len": ["error", 80, { "ignoreRegExpLiterals": true }],
        "no-extra-parens": 0
    }
}
